---
const benefits = [
  'Exclusive Lounge Access',
  '10% Off Gear & Merchandise',
  'Business Community Resources',
  'Priority Booking of Space',
  'Business Networking Nights',
  'Elite Invite-Only Events',
  'Game Nights',
  'Complimentary Drinks',
  'Podcast & Website Marketing',
  'Monthly Drawings for Sports Events',
];
---

<section id="membership">
  <div class="container">

    <div class="membership-header">
      <div class="section-label centered reveal">What You Get</div>
      <h2 class="section-title reveal reveal-delay-1">
        Elite <span>Membership</span> Benefits
      </h2>
      <div class="price-badge reveal reveal-delay-2">
        <span class="price-label">Elite Membership</span>
        <span class="price-amount">$50</span>
        <span class="price-period">per month</span>
      </div>
    </div>

    <div class="benefits-grid">
      {benefits.map((benefit, i) => (
        <div class={`benefit-item reveal reveal-delay-${(i % 3) + 1}`}>
          <div class="benefit-check">
            <svg viewBox="0 0 12 10" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="1.5 5 4.5 8 10.5 2" />
            </svg>
          </div>
          <div class="benefit-text">{benefit}</div>
        </div>
      ))}
    </div>

    <div class="limit-banner reveal">
      <div class="limit-line"></div>
      <div class="limit-text">This Membership Is Limited To 55 Members Only</div>
      <div class="limit-line right"></div>
    </div>

  </div>
</section>

<style>
  #membership { background: var(--dark); }

  /* ─ Header ─ */
  .membership-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-label.centered {
    justify-content: center;
  }
  .section-label.centered::after { display: none; }
  .section-label.centered::before {
    content: '';
    flex: 1;
    height: 1px;
    background: rgba(232,101,10,0.3);
  }

  /* ─ Price badge ─ */
  .price-badge {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(135deg, var(--orange), var(--orange-dark));
    clip-path: polygon(12px 0%, 100% 0%, calc(100% - 12px) 100%, 0% 100%);
    padding: 20px 56px;
    margin-top: 24px;
  }

  .price-label {
    font-family: 'Cinzel', serif;
    font-size: 0.65rem;
    letter-spacing: 0.25em;
    color: rgba(255,255,255,0.8);
    text-transform: uppercase;
  }

  .price-amount {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3.5rem;
    color: var(--white);
    line-height: 1;
  }

  .price-period {
    font-family: 'Lato', sans-serif;
    font-size: 0.8rem;
    color: rgba(255,255,255,0.7);
    letter-spacing: 0.1em;
  }

  /* ─ Benefits Grid ─ */
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2px;
    background: rgba(232,101,10,0.08);
    border: 1px solid rgba(232,101,10,0.15);
  }

  .benefit-item {
    background: var(--dark-2);
    padding: 28px;
    display: flex;
    align-items: flex-start;
    gap: 16px;
    transition: background 0.3s;
    position: relative;
    overflow: hidden;
  }
  .benefit-item::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 3px;
    height: 0;
    background: var(--orange);
    transition: height 0.3s;
  }
  .benefit-item:hover { background: var(--dark-3); }
  .benefit-item:hover::before { height: 100%; }

  .benefit-check {
    width: 20px;
    height: 20px;
    border: 1.5px solid var(--orange);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-top: 2px;
    color: var(--orange);
  }

  .benefit-check svg {
    width: 10px;
    height: 10px;
  }

  .benefit-text {
    font-family: 'Lato', sans-serif;
    font-size: 0.9rem;
    color: var(--off-white);
    line-height: 1.4;
    font-weight: 400;
  }

  /* ─ Limit Banner ─ */
  .limit-banner {
    margin-top: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 24px;
  }

  .limit-line {
    flex: 1;
    max-width: 160px;
    height: 1px;
    background: linear-gradient(to right, transparent, var(--orange));
  }
  .limit-line.right {
    background: linear-gradient(to left, transparent, var(--orange));
  }

  .limit-text {
    font-family: 'Cinzel', serif;
    font-size: 0.7rem;
    letter-spacing: 0.22em;
    color: var(--orange);
    text-transform: uppercase;
    text-align: center;
  }

  @media (max-width: 800px) {
    .benefits-grid { grid-template-columns: 1fr; }
  }
</style>
