---
const year = new Date().getFullYear();
---

<footer>
  <div class="footer-logo">Lounge 55™</div>
  <div class="footer-tagline">Raising The Bar · VIP Membership</div>
  <div class="footer-divider"></div>
  <p class="footer-copy">© {year} Lounge 55. All rights reserved.</p>
</footer>

<style>
  footer {
    background: #0A0A0A;
    padding: 48px 24px;
    text-align: center;
    border-top: 1px solid rgba(232,101,10,0.1);
  }

  .footer-logo {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    letter-spacing: 0.12em;
    color: var(--orange);
    margin-bottom: 8px;
  }

  .footer-tagline {
    font-family: 'Cinzel', serif;
    font-size: 0.62rem;
    letter-spacing: 0.35em;
    color: var(--text-muted);
    text-transform: uppercase;
    margin-bottom: 32px;
  }

  .footer-divider {
    width: 80px;
    height: 1px;
    background: rgba(232,101,10,0.3);
    margin: 0 auto 24px;
  }

  .footer-copy {
    font-size: 0.78rem;
    color: rgba(154,138,122,0.5);
    letter-spacing: 0.05em;
  }
</style>
