<section class="hero">
  <div class="hero-bg"></div>

  <div class="hero-tagline">Raising The Bar</div>

  <div class="hero-brand">
    <h1>Lounge<span>55</span></h1>
  </div>

  <div class="hero-sub">VIP Membership</div>

  <div class="hero-cta-group">
    <a href="#join" class="btn-primary">Claim Your Seat</a>
    <a href="#membership" class="btn-outline">View Benefits</a>
  </div>

  <div class="hero-scroll-hint">
    <span>Scroll</span>
    <div class="scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 120px 24px 80px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 60% at 50% 30%, rgba(232,101,10,0.12) 0%, transparent 70%),
      radial-gradient(ellipse 40% 40% at 20% 80%, rgba(196,79,0,0.08) 0%, transparent 60%),
      radial-gradient(ellipse 40% 40% at 80% 80%, rgba(232,101,10,0.06) 0%, transparent 60%),
      var(--dark);
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 0; height: 0;
    border-style: solid;
    border-width: 220px 220px 0 0;
    border-color: rgba(232,101,10,0.18) transparent transparent transparent;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    bottom: 0; right: 0;
    width: 0; height: 0;
    border-style: solid;
    border-width: 0 0 220px 220px;
    border-color: transparent transparent rgba(232,101,10,0.18) transparent;
  }

  .hero-tagline {
    font-family: 'Cinzel', serif;
    font-size: 0.75rem;
    letter-spacing: 0.35em;
    color: var(--orange);
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
    animation: fadeUp 0.8s ease both;
    position: relative;
  }
  .hero-tagline::before,
  .hero-tagline::after {
    content: '';
    display: block;
    width: 50px;
    height: 1px;
    background: var(--orange);
    opacity: 0.6;
  }

  .hero-brand {
    position: relative;
    animation: fadeUp 0.9s 0.1s ease both;
  }

  .hero-brand h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(5rem, 15vw, 11rem);
    line-height: 0.9;
    letter-spacing: 0.05em;
    color: var(--white);
    text-shadow:
      0 0 60px rgba(232,101,10,0.35),
      0 4px 20px rgba(0,0,0,0.8);
  }

  .hero-brand h1 span {
    display: block;
    font-size: clamp(7rem, 22vw, 16rem);
    background: linear-gradient(160deg, #FF9500 0%, #E8650A 40%, #C44F00 70%, #8B3000 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: none;
    filter: drop-shadow(0 6px 30px rgba(232,101,10,0.5));
    line-height: 0.85;
  }

  .hero-sub {
    font-family: 'Cinzel', serif;
    font-size: 0.75rem;
    letter-spacing: 0.35em;
    color: var(--orange);
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 20px;
    animation: fadeUp 1s 0.2s ease both;
  }
  .hero-sub::before,
  .hero-sub::after {
    content: '';
    display: block;
    width: 50px;
    height: 1px;
    background: var(--orange);
    opacity: 0.6;
  }

  .hero-cta-group {
    margin-top: 56px;
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
    animation: fadeUp 1.1s 0.3s ease both;
    position: relative;
  }

  .hero-scroll-hint {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    animation: fadeUp 1.4s 0.6s ease both;
  }

  .hero-scroll-hint span {
    font-family: 'Cinzel', serif;
    font-size: 0.6rem;
    letter-spacing: 0.3em;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--orange), transparent);
    animation: scrollPulse 2s infinite;
  }
</style>
